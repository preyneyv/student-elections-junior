<!DOCTYPE html>
<html>
<head>
	<title>Students | Student Elections</title>

	{{> imports}}

	<script defer src="students.js"></script>
	<link rel="stylesheet" type="text/css" href="students.css">
</head>
<body>
	{{> sidebar}}
	<div id="content">
		<div id="title-row">
			<div id="page-title">Students</div>
			<div class="spacer"></div>
			<button id="create-student-button">Create<br>New</button>
		</div>
		<div>
			<table id="students-table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Pin</th>
						<th>Grade</th>
						<th>Section</th>
						<th>House</th>
						<th>Used</th>
						<th>Voted</th>
						<th class="nosort">Actions</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
	<datalist id="section-datalist">
		<option>Beta</option>
		<option>Gamma</option>
		<option>Delta</option>
	</datalist>
	<datalist id="house-datalist">
		<option>Poseidon</option>
		<option>Phoenix</option>
		<option>Hercules</option>
		<option>Caesar</option>
	</datalist>
	<div id="new-student-modal" style="display: none;">
		<div class="modal-background"></div>
		<div class="modal-window">
			<div class="modal-header">Create Student</div>
			<div class="modal-content">
				<input required id="new-student-name" type="text" placeholder="Name">
				<input required id="new-student-grade" type="number" min="1" max="12" placeholder="Grade">
				<input required
				list="section-datalist"
				id="new-student-section"
				type="text"
				placeholder="Section">
				<input required
				list="house-datalist"
				id="new-student-house"
				type="text"
				placeholder="House">
			</div>
			<div class="modal-footer">
				<button id="new-student-cancel-button">Cancel</button>
				<button class="primary" id="new-student-save-button">Save</button>
			</div>	
		</div>
	</div>

	<div id="edit-student-modal" style="display: none;">
		<div class="modal-background"></div>

		<div class="modal-window">
			<div class="modal-header">Edit Student</div>
			<div class="modal-content">
				<input id="edit-student-name" type="text" placeholder="Name">
				<input id="edit-student-grade" type="number" min="1" max="12" placeholder="Grade">
				<input
				list="section-datalist"
				id="edit-student-section"
				type="text"
				placeholder="Section">
				<input
				list="house-datalist"
				id="edit-student-house"
				type="text"
				placeholder="House">
			</div>
			<div class="modal-footer">
				<button id="edit-student-cancel-button">Cancel</button>
				<button class="primary" id="edit-student-save-button">Save</button>
			</div>	
		</div>
	</div>
</body>
</html>